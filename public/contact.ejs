<script>
    const successAlert = document.querySelector('#alert-3');
    const alertMsg = document.getElementById('alert_msg')

    document.getElementById('myform').addEventListener('submit', async (e) => {
        e.preventDefault();
        try {
            const form = document.getElementById('myform');
            const formData = new FormData(form);

            const response = await fetch('/contact/response', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify([...formData.entries()])
            });

            const result = await response.json();

            if (result.success) {
                successAlert.className = "flex fixed items-center p-4 mb-4 text-white rounded-lg bg-green-500 dark:bg-gray-800 dark:text-green-400 mt-16 left-[37%] mini:left-[25%]"
                alertMsg.innerHTML = "Form Submitted Successfully. We'll reach you ASAP!"
            }
            else {
                successAlert.className = "flex fixed items-center p-4 mb-4 text-white rounded-lg bg-red-500 dark:bg-gray-800 dark:text-green-400 mt-16 left-[37%] mini:left-[25%]"
                alertMsg.innerHTML = "Server Error! Please contact the Developer"
            }
        } catch (error) {
            console.error('Error:', error);
        }
    });
</script>

